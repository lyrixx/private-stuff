{% extends "base.html.twig" %}

{% block title %}Important files{% endblock %}
{# {% block subtitle %}Find bellow all your files{% endblock %} #}

{% block container %}
    <div class="panel-section">
        <h2 class="panel-title">File List</h2>
        <ul class="file-list">
            {% for file in files %}
                <li class="file-item">
                    <a download="{{ file.name }}.{{ file.extension }}" href="./upload/{{ file.path }}">
                        {{ file.emoji }}
                        {{ file.name|title }}
                    </a>
                </li>
            {% else %}
                <li class="file-item">No files found</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

